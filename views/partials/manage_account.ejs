<div class="col col-login mx-auto">
    <div class="text-center mb-6">
        <img src="/tabler.svg" class="h-6" alt="">
    </div>
    <form id="registerForm" class="card" action="updateAccount/<%= title2 %>/<%= id %> ">
        <div class="card-body p-6">
            <div class="card-title">Edit Name And Email</div>
            <div class="form-group">
                <label class="form-label">Name</label>
                <input name="name" value="<%= name %> " type="text" class="form-control" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label class="form-label">Email address</label>
                <input name="email" value="<%= email %> " type="email" class="form-control" placeholder="Enter email">
            </div>
            <div class="form-footer">
                <button type="submit" class="btn btn-primary btn-block">Edit Name And Email</button>
            </div>
        </div>
    </form>
</div>